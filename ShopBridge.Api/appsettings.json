{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "DataBaseName": "ShopBridge",
  "TableName": "tbl_products",

  "ConnectionStrings": {

    //beter to place it in environment Variable
    //"DbConnection": "Server=192.168.0.205; User Id = ehrchat; pwd=ehrchat; database=EHR_Chat_Dabase;",
    "DbConnection": "Data Source=localhost;User ID=mohan;Password=mohan111;",
    //"ServerConnection": "Server=192.168.0.205; User Id = ehrchat; pwd=ehrchat;"
    //"ServerConnection": "Server=localhost; Database=master; Trusted_Connection=True; Integrated Security=False;"
    "ServerConnection": "Data Source=localhost; User ID=mohan;Password=mohan111;"

  },



  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "(@Level = 'Error' or @Level = 'Fatal' or @Level = 'Warning')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "c://Logs/ShopBridge/Exceptions/Ex--.log",
                  //"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact", // for property names Like '@t'
                  "rollingInterval": "Hour", /*  Infinite, Year, Month, Day, Hour, Minute */
                  "retainedFileCountLimit": 7
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "MultipleLogFilesSample"
    }
  }



}
